<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prosta Aplikacja WPF" Height="350" Width="400">
	<Grid>
		<StackPanel Margin="10">
			<TextBox x:Name="InputTextBox" Width="200" Height="25" />
			<Button Content="Dodaj do listy" Click="Button_Click" Width="200" Height="30" Margin="0,10,0,0"/>
			<ListBox ItemsSource="{Binding Items}" Width="200" Height="150"/>
		</StackPanel>
	</Grid>
</Window>